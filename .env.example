# Gemini API Configuration
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/storyforge

# JWT Secret for authentication
JWT_SECRET=your_very_secure_random_jwt_secret_here

# Firebase Admin SDK Configuration
# Get these values from: https://console.firebase.google.com/project/storyforge-586ca/settings/serviceaccounts/adminsdk
FIREBASE_PROJECT_ID=storyforge-586ca
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@storyforge-586ca.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Alternative: Path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json